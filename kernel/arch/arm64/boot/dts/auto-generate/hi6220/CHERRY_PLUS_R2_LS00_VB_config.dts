/dts-v1/;
/* NOTE:
 * The last reserved memory base is used in fastboot
 * Which should be the least reseve value
 */
/include/ "fastboot.dtsi"
/include/ "CHERRY_PLUS_R2_UL00_VB_config.dtsi"
/include/ "CHERRY_PLUS_R2_LS00_VB_pin.dtsi"
/include/ "CHERRY_PLUS_R2_LS00_VB_gpio_logic.dtsi"
/include/ "CHERRY_PLUS_R2_LS00_VB_pmic.dtsi"
/include/ "CHERRY_PLUS_R2_LS00_VB_charger.dtsi"
/ {
	hisi,boardid = <0 7 8 0>;
	hisi,boardname = "CHERRY_PLUS_R2_LS00_VB";
        hisi,modem_id = <0x3DB00500>;
	hisi,product_name = "CHERRY_PLUS_LS00";

    boardinfo{
	factory_product_name = "HL4CHRPLSL03MAA";
	normal_product_name = "Che2-L03";
	};
    
    amba {
	i2c2: i2c@f7102000 {
			st_lis3dh_acc:acc@18{
				axis_map_x=<0>;
				axis_map_y=<1>;
				axis_map_z=<2>;
				negate_x=<0>;
				negate_y=<1>;
				negate_z=<1>;
				status = "ok";
			};
			rohm_kc023_acc:acc@1E{
				axis_map_x=<0>;
				axis_map_y=<1>;
				axis_map_z=<2>;
				negate_x=<0>;
				negate_y=<1>;
				negate_z=<1>;
				status = "ok";
			};
		};
	};

    /*separate audio parameters for cherryplus global project*/
    audio_hw_config {
        product_name = "CHERRYPLUSGLOBAL";
        cust_name = "none";
        spk_pa_name = "none";
        soc_name = "hi62x0";
        codec_name = "hissc";
        codec_dsp_algo = "none";
        modem_sio_master = "true";
        status = "ok";
    };
};
